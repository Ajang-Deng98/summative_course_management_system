{
  "info": {
    "name": "Course Management Platform API",
    "description": "Complete API collection for the Course Management Platform with authentication, course allocation, and activity tracking",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "manager_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "facilitator_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Manager Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('manager_token', response.token);",
                  "    pm.collectionVariables.set('jwt_token', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"manager@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Facilitator Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('facilitator_token', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"facilitator@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Register New User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"facilitator\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            }
          }
        }
      ]
    },
    {
      "name": "Course Management (Manager)",
      "item": [
        {
          "name": "Get All Course Offerings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{manager_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/courses/offerings",
              "host": ["{{base_url}}"],
              "path": ["api", "courses", "offerings"]
            }
          }
        },
        {
          "name": "Create Course Offering",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{manager_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"moduleId\": 1,\n  \"facilitatorId\": 2,\n  \"cohortId\": 1,\n  \"classId\": 1,\n  \"modeId\": 1,\n  \"trimester\": 1,\n  \"intakePeriod\": \"HT1\",\n  \"startDate\": \"2024-01-15\",\n  \"endDate\": \"2024-04-15\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/courses/offerings",
              "host": ["{{base_url}}"],
              "path": ["api", "courses", "offerings"]
            }
          }
        },
        {
          "name": "Update Course Offering",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{manager_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"trimester\": 2,\n  \"intakePeriod\": \"HT2\",\n  \"startDate\": \"2024-05-15\",\n  \"endDate\": \"2024-08-15\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/courses/offerings/1",
              "host": ["{{base_url}}"],
              "path": ["api", "courses", "offerings", "1"]
            }
          }
        },
        {
          "name": "Filter Courses by Trimester",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{manager_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/courses/offerings?trimester=1",
              "host": ["{{base_url}}"],
              "path": ["api", "courses", "offerings"],
              "query": [
                {
                  "key": "trimester",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Filter Courses by Facilitator",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{manager_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/courses/offerings?facilitatorId=2",
              "host": ["{{base_url}}"],
              "path": ["api", "courses", "offerings"],
              "query": [
                {
                  "key": "facilitatorId",
                  "value": "2"
                }
              ]
            }
          }
        }
      ]
    },
